<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_fragment_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="de.uni_stuttgart.informatik.sopra.sopraapp.app.MainActivity">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.design.widget.CoordinatorLayout>

    <!--Bottom sheet layout-->
    <include layout="@layout/activity_main_bottom_sheet" />

    <!--Both floating action buttons
    Align on top of hidden bottom sheet-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="end"
        android:orientation="vertical"
        app:layout_anchor="@id/bottom_sheet_container">

        <!--Align right-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:gravity="end"
            android:orientation="vertical"
            app:layout_anchor="@id/bottom_sheet_container">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/map_fab_locate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginEnd="@dimen/fab_margin"
                android:tint="@color/white"
                app:backgroundTint="@android:color/transparent"
                app:elevation="0dp"
                app:fabSize="mini"
                app:rippleColor="@android:color/transparent"

                app:srcCompat="@drawable/ic_my_location_black_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/map_fab_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:tint="@color/white"
                app:layout_anchor="@+id/fabinv"
                app:srcCompat="@drawable/ic_add_black_24dp" />

        </LinearLayout>

    </LinearLayout>

    <!--app:backgroundTint="@android:color/transparent"-->

</android.support.design.widget.CoordinatorLayout>