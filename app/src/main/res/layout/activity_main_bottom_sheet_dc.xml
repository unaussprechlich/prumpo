<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/bottom_sheet_container_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

        <include
                layout="@layout/activity_main_bottom_sheet_top_bar_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bstop"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bstop"
                android:orientation="vertical"
                android:padding="8dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:maxLines="1"
                        android:paddingEnd="8dp"
                        android:scrollHorizontally="true"
                        android:text="@string/map_frag_bottomsheet_inp_dialog_dc_title_hint"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry"/>

                <EditText
                        android:id="@+id/bottom_sheet_dc_input_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:inputType="textVisiblePassword"
                        android:lines="1"
                        android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:maxLines="1"
                        android:paddingEnd="8dp"
                        android:text="@string/map_frag_bottomsheet_inp_dialog_dc_location_hint"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry"/>

                <EditText
                        android:id="@+id/bottom_sheet_dc_input_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:inputType="textVisiblePassword"
                        android:maxLines="1"
                        android:textColorLink="@android:color/transparent"
                        android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:maxLines="1"
                        android:paddingEnd="8dp"
                        android:text="@string/map_frag_bottomsheet_inp_dialog_dc_policyholder_hint"
                        android:textColorLink="@android:color/transparent"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry"/>

                <EditText
                        android:id="@+id/bottom_sheet_dc_input_policyholder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:inputType="textVisiblePassword"
                        android:maxLines="1"
                        android:textColorLink="@android:color/transparent"
                        android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:maxLines="1"
                        android:paddingEnd="8dp"
                        android:text="@string/map_frag_botsheet_dialog_dc_date_hint"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry"/>

                <EditText
                        android:id="@+id/bottom_sheet_dc_input_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:inputType="textVisiblePassword"
                        android:maxLines="1"
                        android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>



