<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

        <CheckBox
                android:text="@string/listview_contract_dialog_sharing_plain_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contract_share_checkbox_plain_text"/>

        <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button

                    android:text="@string/listview_contract_dialog_sharing_abort"
                    android:textAlignment="textStart"
                    android:paddingStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/contract_share_abort"/>

            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    />

            <Button
                    android:text="@string/listview_contract_dialog_sharing_as_json"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/contract_share_export_json"
                    />

            <Button
                    android:text="@string/listview_contract_dialog_sharing_as_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/contract_share_export_text"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>