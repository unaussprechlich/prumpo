<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/dc_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/dc_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/dc_name"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/dc_image"
                android:layout_toStartOf="@+id/dc_area"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/dc_area"
                android:layout_width="76dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@+id/dc_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/dc_name_expert"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dc_name"
                android:layout_toEndOf="@+id/dc_image"
                android:layout_toStartOf="@+id/dc_area" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>