<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/contract_card"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="6dp"

                                    android:clickable="true"
                                    android:focusable="true"
                                    >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                    android:id="@+id/contract_identification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contract name"
                    android:layout_marginBottom="4dp"
                    android:lines="1"
                    android:textSize="18sp" />

            <TextView
                    android:id="@+id/contract_policyholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Policyholder"
                    android:lines="1"
                    android:layout_marginBottom="6dp"
                    android:textSize="14sp" />



                <TextView
                        android:id="@+id/contract_damagetypes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Damage Types"
                        android:textSize="14sp" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/contract_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="FlÃ¤che"
                        android:textStyle="bold|italic"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textSize="14sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:textStyle="bold|italic"
                        android:text="ha"
                        android:textAlignment="textEnd"
                        android:textSize="14sp" />

            </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>