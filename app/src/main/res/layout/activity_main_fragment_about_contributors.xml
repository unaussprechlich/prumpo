<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/about_fragment_contributor_header"
                android:textAppearance="?android:attr/textAppearancePopupMenuHeader"
                android:id="@+id/about_frag_textView_contributors"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_fragment_contributor_1"
                android:id="@+id/about_frag_textView_contributors_input1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_fragment_contributor_2"
                android:id="@+id/about_frag_textView_contributors_input2"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_fragment_contributor_3"
                android:id="@+id/about_frag_textView_contributors_input3"/>
    </LinearLayout>

</android.support.v7.widget.CardView>